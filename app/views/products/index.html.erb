<h1>Productos</h1>

<ul>
	<% @products.each do |product| %>
		<li><%= link_to product.name , product %>
			<%= link_to "Edit ", edit_product_path(product) %>
			<%= link_to "Delete", product_path(product), method: :delete %></li>
	<% end %>
</ul>

